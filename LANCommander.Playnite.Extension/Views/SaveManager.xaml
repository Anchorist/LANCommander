<UserControl x:Class="LANCommander.PlaynitePlugin.Views.SaveManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LANCommander.PlaynitePlugin.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
		<StackPanel Orientation="Vertical">
			<ListBox Name="SaveList" HorizontalContentAlignment="Stretch" MinHeight="400" Margin="0,0,0,10">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding CreatedOn}" />
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>

			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<Button Grid.Column="0" Click="DownloadButton_Click" x:Name="DownloadButton" IsEnabled="{Binding ElementName=SaveList, Path=SelectedItems.Count}" Margin="0,0,5,0">Download</Button>
				<Button Grid.Column="1" Click="DeleteButton_Click" x:Name="DeleteButton" IsEnabled="{Binding ElementName=SaveList, Path=SelectedItems.Count}" Margin="5,0,0,0">Delete</Button>
			</Grid>
		</StackPanel>
    </Grid>
</UserControl>
