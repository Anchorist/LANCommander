@if (Page.Children != null && Page.Children.Any())
{
    <SubMenu Key="@(Page.Id.ToString())" Title="@Page.Title">
        @foreach (var child in Page.Children.OrderBy(p => p.SortOrder))
        {
            <PageMenuItem Page="@child" />
        }
    </SubMenu>
}
else
{
    <MenuItem RouterLink="@($"/{Page.Route}")">@Page.Title</MenuItem>
}

@code {
    [Parameter] public Page Page { get; set; }
}
